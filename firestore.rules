rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read and write only their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Legacy support: Allow read access to root collections for migration
    // (Recommended to remove these after migration is complete)
    match /trades/{document=**} {
      allow read: if request.auth != null;
    }
    match /accounts/{document=**} {
      allow read: if request.auth != null;
    }
    match /transactions/{document=**} {
      allow read: if request.auth != null;
    }
    match /categories/{document=**} {
      allow read: if request.auth != null;
    }
    match /budgets/{document=**} {
      allow read: if request.auth != null;
    }
    match /recurringDebts/{document=**} {
      allow read: if request.auth != null;
    }
    
    // Shared custody overrides collection (Legacy support)
    match /custody_overrides/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
